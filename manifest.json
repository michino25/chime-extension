{
  "manifest_version": 2,
  "name": "Chime",
  "version": "0.3.0",
  "description": "Set custom hourly or recurring alerts with custom messages and sound notifications (can be toggled on/off).",
  "permissions": ["notifications", "storage", "alarms", "idle"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
